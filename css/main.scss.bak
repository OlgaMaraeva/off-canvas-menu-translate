@mixin res-img ($imgMaxWidth, $imgMinWidth, $imgWidth, $imgMinHeight, $imgMaxHeight) {
position: relative;
display: block;
width: $imgWidth;
max-width: $imgMaxWidth;
min-width: $imgMinWidth;
min-height: $imgMinHeight;
max-height: $imgMaxHeight;
}

@mixin display-block {
position:relative;
display:block;
}

@mixin centered {
position:relative;
display:block;
margin:0 auto;
}

@mixin text-centered {
position:relative;
display:block;
text-align:center;
}

@mixin responsive-img {
max-width:100%;
height:auto;
}

